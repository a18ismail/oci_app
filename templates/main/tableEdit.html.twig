{% block tableSimple %}

    <table class="table table-hover table-dark mt-3">
        <thead>
            <tr>
                <th scope="col">ID</th>
                <th scope="col">Nom</th>
                <th scope="col">Gènere</th>
                <th scope="col">Descripció</th>
                <th>Acció</th>
            </tr>
        </thead>
        <tbody>
            {% for key, item in ofertes %}
                <tr>
                    <td>{{ item.id }}</td>
                    <td>{{ item.nom }}</td>
                    <td>{{ item.genere }}</td>
                    <td>{{ item.descripcio }}</td>
                    <td>
                        <button id="btnEditar-{{ item.id }}" type="button" class="btn btn-primary" data-toggle="modal">Editar</button>
                    </td>
                </tr>
            {% endfor %}
        </tbody>
    </table>

    {% for key, item in ofertes %}
        {% include 'main/modalEdit.html.twig' with {'oferta': item} %}
    {% endfor %}

    <script>
        {% for key, item in ofertes %}
            $("#btnEditar-{{ item.id }}").click(function() {
                $('#editarModal-{{ item.id }}').modal('show');
            });
        {% endfor %}
    </script>

{% endblock %}
