{% block tableSimple %}

    <table class="table table-hover table-dark mt-3">
        <thead>
            <tr>
                <th scope="col">ID</th>
                <th scope="col">Nom</th>
                <th scope="col">Gènere</th>
                <th scope="col">Descripció</th>
            </tr>
        </thead>
        <tbody>
            {% for key, item in ofertes %}
                <tr>
                    <td>{{ item.id }}</td>
                    <td>{{ item.nom }}</td>
                    <td>{{ item.genere }}</td>
                    <td>{{ item.descripcio }}</td>
                </tr>
            {% endfor %}
        </tbody>
    </table>

{% endblock %}
