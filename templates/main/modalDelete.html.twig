{% block modalDelete %}

    <div class="modal fade" id="eliminarModal-{{ item.id }}" tabindex="-1" role="dialog" aria-labelledby="eliminarModal" aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">Elimina aquesta oferta</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <form action="{{ path('eliminar') }}" method="post">
                       <p>Estas segur que vols esborrar aquesta oferta?</p>
                        <input type="hidden" name="inputEliminarId" id="inputEliminarId" value="{{ item.id }}">
                        <div class="form-group row">
                            <div class="col-sm-12 d-flex flex-row-reverse">
                                <button type="submit" class="btn btn-outline-danger">Eliminar</button>
                            </div>
                        </div>
                    </form>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-outline-secondary" data-dismiss="modal">Tancar modal</button>
                </div>
            </div>
        </div>
    </div>

{% endblock %}